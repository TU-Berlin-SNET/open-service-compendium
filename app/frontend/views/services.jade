div(ng-controller='ServicesController')
	// ui-view will load the selected view, detail.html or compare.html
	div(ui-view='')
	div(ng-show="state.current.name == 'services'")
		.container-fluid
			.col-md-6
				table.table
					tr
						th(style='text-align: right;') Cloud Service Model:
						td
							div
								label.checkbox-inline
									input(ng-model="filter['cloud_service_model']['iaas']", value='iaas', type='checkbox', name='cloud_service_model')
									| IAAS
								label.checkbox-inline
									input(ng-model="filter['cloud_service_model']['saas']", value='saas', type='checkbox', name='cloud_service_model')
									| SAAS
								label.checkbox-inline
									input(ng-model="filter['cloud_service_model']['paas']", value='paas', type='checkbox', name='cloud_service_model')
									| PAAS
					tr
						th(style='text-align: right;') Payment Options:
						td
							label.checkbox-inline
								input(ng-model='filter.payment_options.credit_card', type='checkbox')
								| Credit Card
							label.checkbox-inline
								input(ng-model='filter.payment_options.paypal', type='checkbox')
								| PayPal
							label.checkbox-inline
								input(ng-model='filter.payment_options.cheque', type='checkbox')
								| Cheque
							label.checkbox-inline
								input(ng-model='filter.payment_options.invoice', type='checkbox')
								| Invoice
					tr
						th(style='text-align: right;') Is Billed:
						td
							label.checkbox-inline
								input(ng-model='filter.is_billed.monthly', type='checkbox')
								| Monthly
							label.checkbox-inline
								input(ng-model='filter.is_billed.annually', type='checkbox')
								| Annually
					tr
						th(style='text-align: right;') Offline Availability:
						td
							label.checkbox-inline
								input(ng-model='filter.can_be_used_offline.true', type='checkbox')
								| Yes
					tr
						th(style='text-align: right;') Protection by:
						td
							label.checkbox-inline
								input(ng-model='filter.is_protected_by.https', type='checkbox')
								| HTTPS
			.col-md-6(style='border-left: 1px solid #E7E7E7')
				a(ui-sref='services.compare({ id: seoUrl(checkboxList[0].service_name,checkboxList[0].uri) , other_id: seoUrl(checkboxList[1].service_name,checkboxList[1].uri) })')
					button.btn.btn-default.pull-left(ng-disabled='canNotCompare()')
						div(ng-show='checkboxList[1]== null') Select two services for comparison
						div(ng-show='checkboxList[1]!= null') Compare
				br
				br
				br
				b {{serviceType}}
				ul.list-unstyled(ng-model='services')
					| {{filtered.length}} service(s) found
					li(ng-repeat='service in filtered=(services | filter:filterByProperties)')
						label.checkbox-inline
							input(type='checkbox', ng-disabled='canNotSelect(service.uri)', value='{{service.service_name}}', id='{{service.service_name}}', checklist-model='checkboxList', checklist-value='service')
							a(ui-sref='services.detail({ id: seoUrl(service.service_name,service.uri) })', ng-click='selectService(service)') {{ service.service_name }}